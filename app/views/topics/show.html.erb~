<% title "Topic" %>

<p>
  <strong>Name:</strong>
  <%= @topic.name %>
</p>
  <div class="post">
    <div class="post-content"> <%= @topic.content %> </div>
    <div class="post-info"> <%= @topic.created_at > 1.days.ago ? image_tag("http://www.awwwards.com/images/ico_pending.png") + " " + time_ago_in_words(@topic.created_at) + t( :ago ) : l(@topic.created_at, :format => :long) if !@topic.nil? %> </div>
    <% if current_user.admin? %>
      <div class="post-controls">  <%= link_to "Редактировать", edit_topic_path(@topic) %> | <%= link_to "Удалить", @topic, :confirm => 'Are you sure?', :method => :delete %> </div>
    <% end %>
  </div>

<% for post in @topic.posts %>

  <div class="post">
    <div class="post-content"> <%= post.content %> </div>
    <div class="post-info"> <%= post.created_at > 1.days.ago ? image_tag("http://www.awwwards.com/images/ico_pending.png") + " " + time_ago_in_words(post.created_at) + t( :ago ) : l(post.created_at, :format => :long) if !post.nil? %> </div>
    <% if current_user.admin? %>
      <div class="post-controls">  <%= link_to "Редактировать", edit_post_path(post) %> | <%= link_to "Удалить", post, :confirm => 'Are you sure?', :method => :delete %> </div>
    <% end %>
  </div>

<% end %>

<p><%= link_to "Добавить пост", new_post_path( :topic => @topic.id ) %></p>
