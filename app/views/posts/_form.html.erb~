<%= form_for @post do |f| %>
  <%= f.error_messages %>

  <% if params[:topic] %> <input type="hidden" id="post_topic_id" name="post[topic_id]" value="<%= params[:topic] %>" /><% end %>

  <p>
    <%= f.label :content, "Введите текст сообщения" %><br />
    <%= f.text_area :content %>
  </p>

  <p><%= f.submit "Создать" %></p>
<% end %>

