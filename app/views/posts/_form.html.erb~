<%= form_for @post do |f| %>
  <%= f.error_messages %>

  <% if params[:topic] %> <input type="hidden" id="post_topic_id" name="post[topic_id]" value="<%= params[:topic] %>" /><% end %> 

  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content, :value => params[:topic] %>
  </p>

  <p><%= f.submit %></p>
<% end %>
