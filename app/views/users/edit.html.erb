<h1>Edit user</h1>

<%= form_for(@user, :remote=>true) do |f| %>
    
	<% if @user.errors.any? %>
	    <div id="errorExplanation">
	      <ul>
	        <% @user.errors.each do |attr, msg| %>
	            <li><%= msg %></li>
	        <% end %>
	      </ul>
	    </div>
	<% end %>
	
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
 