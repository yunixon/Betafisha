<li>
  <span class="user-name-span <%= 'admin-user-name' if user.admin? %> "> <%= link_to user.username, user %> </span>
	<span class="delete-user-span"> <%= link_to "Удалить",
                                              user,
                                              :title => "Удалить #{user.email}",
                                              :method => "delete",
                                              :confirm => "Вы уверены?",
                                              :title => "Удалить #{user.email}",
                                              :page => params[:page],
                                              :class => "delete_user"%>
  </span>
  <% if current_user? (user) %>
    <span class="user-email-span"><%= link_to user.email, user %></span>
  <% end %>
</li>
