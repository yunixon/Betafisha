<h1>Регистрация</h1>

<%= form_for(@user) do |f| %>
    <br/>
    <div class="field">
      <%= f.label :name, "Имя пользователя" %>
      <br/>
      <%= f.text_field :name %>
    </div>
     <br/>
    <div class="field">
      <%= f.label :email, "Адрес электронной почты" %>
      <br/>
      <%= f.text_field :email %>
    </div>
     <br/>
    <div class="field">
      <%= f.label :password, "Пароль" %>
      <br/>
      <%= f.password_field :password %>
    </div>
     <br/>
    <div class="field">
      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <br/>
      <%= f.password_field :password_confirmation %>
    </div>
     <br/>
    <div class="actions">
      <%= f.submit " Создать учетную запись!" %>
    </div>
<% end %>