<!DOCTYPE html>
<html>
<head>
  	<title><%= title 'BetAfisha' %></title>

	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<%= stylesheet_link_tag 'reset', 'grid','accordian','style','popup', 'sign' %>

	<%= javascript_include_tag :defaults, 'textinputfilter', 'script', 'popup' %>

</head>
<body>

<header class="container_24">

  <div id="logo" class="grid_12">
    <%= link_to "BetAfisha", root_path %>
  </div>

  <div id="user_entrance" class="grid_12">
    <ul id="locale_switch">
       <li id="locale_en"> <%= link_to "en", "#{request.path}?locale=en" %> </li>
       <li id="locale_ru"> <%= link_to "ru", "#{request.path}?locale=ru" %> </li>
    </ul>
    <ul>
     <% if !signed_in? %>
    	  <li><%= link_to t(:top_menu_sign_up), signup_path %></li>
     <% end %>
	   <% if signed_in? %>
	       <li><%= link_to t(:top_menu_sign_out), signout_path, :method => :delete %> (<%= image_tag("../images/sign_in_icon.png") + " " +  current_user.name %>)</li>
	   <% else %>
	      <li><%= link_to t(:top_menu_sign_in), signin_path  %></li>
	   <% end %>
	   <% if signed_in? %>
      	  <li><%= link_to t(:top_menu_profile), current_user %></li>
     <% end %>
    </ul>

  </div>

</header>

<section class="container_24">
	<div id="wrapper" class="grid_10 push_6" >
			<%= yield %>
	  </div>
</section>

<footer class="container_24">
  	<div id="debug" class="grid_24">
  	</div>
</footer>

</body>
</html>

