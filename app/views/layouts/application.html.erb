<!DOCTYPE html>
<html>
<head>
  	<title><%= title 'BetAfisha' %></title>

	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<%= stylesheet_link_tag 'reset', 'grid', 'accordian', 'style', 'popup', 'news_block', 'comments', 'betting_odds', 'tabs', 'temp' %>
	<%= javascript_include_tag :defaults, 'jquery.cookie.js', 'tabs', 'script', 'textinputfilter', 'popup', 'application' %>
	<%= include_tiny_mce_if_needed %>
</head>
<body>

<div class="top-line" style="width: 100%; height:25px; border-bottom: 1px solid #000; display: block; margin-bottom: 10px; text-align: center; position: relative; background: url(../images/top-line-bg.png) repeat;">

  <div id="user_entrance">
    <!--ul id="locale_switch">
       <li id="locale_en"> <%#= link_to "en", "#{request.path}?locale=en" %> </li>
       <li id="locale_ru"> <%#= link_to "ru", "#{request.path}?locale=ru" %> </li>
    </ul-->

    <ul>
       <% if !signed_in? %>
      	  <li><%= link_to t(:top_menu_sign_up), signup_path %></li>
       <% end %>
	    <% if signed_in? %>
	     <% if current_user.admin?  %>
        <li><%= link_to "Админ панель", "/admin" %></li>
        <% end %>
	      <li><%= link_to t(:top_menu_sign_out), signout_path, :method => :delete %> (<%= image_tag("../images/sign_in_icon.png") + " " +  current_user.name %>)</li>
	   <% else %>
	      <li><%= render 'sessions/new_session' %><%#= link_to t(:top_menu_sign_in), "#?w=400", :class => "poplight", :rel =>"popup_name"  %></li>
	   <% end %>
	   <% if signed_in? %>
      	  <li><%= link_to t(:top_menu_profile), current_user %></li>
       <% end %>
    </ul>
  </div>

</div>

<header class="container_20">

  <div id="navigation" class="grid_20">
    <div class="logo-image-wrapper"> <%= link_to "logo", root_path, :class => "logo-image" %> </div>
    <div class="top-nav">
	  <ul class="dropdown">
	      <li><%= link_to t(:top_menu_coefficients), coefficients_path %></li>
        <li><%= link_to t(:top_menu_bookmakers), bookmakers_path %></li>
        <li><%= link_to t(:top_menu_statistics), statistics_path %></li>
        <li><%= link_to t(:top_menu_tools), tools_path %>
         <ul class="sub_menu">
            <li>
                Calculators
        				<ul>
        					<li>Dutching</li>
        					<li>Hutching</li>
        					<li>Hedging</li>
        					<li>Bet Calculator</li>
        				</ul>
        		</li>
           </ul>
         </li>
        <li><%= link_to "форум",  forums_path  %>

        </li>
	  </ul>
	  </div>
  </div>

  <div id="sub_navigation" class="grid_20">
      <%= yield :sub_navigation%>
  </div>

</header>

<section class="container_20">
	<div id="wrapper" class="grid_20">

	  <div id="banner"  class="grid_20" style=" height: 60px; margin-bottom: 10px; text-align: center;">
         <%= image_tag "banner-long.png",  :width=>"1000", :height=>"60" %>
    </div>

	  <div id="breadcrumb"  class="grid_20">
       <%= yield :breadcrumb %>
    </div>

		<div id="left_nav" class="grid_4">
      <%= yield :left_nav%>
		</div>

	  <div id="content" class="grid_11">
		  <% flash.each do |key, value| %>
		      <div class="flash <%= key %>"> <%= value %> </div>
		  <% end %>
		  <%= yield :content%>
		  <%= yield%>

	   </div>

	  <div id="right_nav" class="grid_5">
      <%= yield :right_nav%>
      <div class="banner">       <%= image_tag "banner-1.jpg",  :width=>"235", :height=>"422" %></div>
			<div class="banner">   <%= image_tag "banner-2.jpg",  :width=>"237", :height=>"357" %></div>
    </div>
</section>

<footer class="container_20">
	  <div id="footer" class="grid_20">
      
	     <div id= "bottom_links" class="grid_4" style="float: right; margin-left: 10px;">
	        <%= link_to "Информация", "/info/policy" %> |
	        <%= link_to "Контакты", "/info/terms" %> |
        	<%= link_to "Faq", "/info/about" %>
       </div>

       <div id= "copyrights" class="grid_10">
      	<%= t(:footer_copyrights) %>
       </div>
        <div id="partners" class="grid_20" style="float: right;"> Партнеры: <a href="http://www.livescore.in/ru/" title="Livescore" target="_blank">Livescore</a>  </div>
  	</div>

  	<div id="debug" class="grid_20">
    	<% if signed_in? %>
      	<%= debug(params) if Rails.env.development? %>
      <% end %>
  	</div>
</footer>

<div id="popup_name" class="popup_block">
    <%= render 'sessions/new_session' %>
</div>

</body>
</html>

<script>
  $("a#toggle-coupon-info").click( function() {
    $(this).removeClass("active");
    if($(this).parent().next().is(':hidden')){
      $(this).parent().next().show();
      $(this).parent().next().addClass("active");
    } else {
      $(this).parent().next().hide();
      $(this).removeClass("active");
    }
    return false;
  });
</script>

