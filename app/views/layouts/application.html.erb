<!DOCTYPE html>
<html>
<head>
  	<title><%= title 'BetAfisha' %></title>

	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<%= stylesheet_link_tag 'reset' %>
	<%= stylesheet_link_tag 'grid' %>
	<%= stylesheet_link_tag 'accordian' %>
	<%= stylesheet_link_tag 'style' %>
	<%= stylesheet_link_tag 'popup' %>
  <%= stylesheet_link_tag 'news_block' %>
  <%= stylesheet_link_tag 'comments' %>
  <%= stylesheet_link_tag 'betting_odds' %>

	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'textinputfilter' %>
	<%= javascript_include_tag 'popup' %>
	<%= javascript_include_tag 'script' %>
  <%= javascript_include_tag 'jquery.cookie.js' %>
	<%= include_tiny_mce_if_needed %>

</head>
<body>

<header class="container_24">

  <div id="logo" class="grid_12">
    <%= link_to "BetAfisha", root_path %>
  </div>

  <div id="user_entrance" class="grid_12">
    <ul id="locale_switch">
       <li id="locale_en"> <%= link_to "en", "#{request.path}?locale=en" %> </li>
       <li id="locale_ru"> <%= link_to "ru", "#{request.path}?locale=ru" %> </li>
    </ul>
    <ul>
       <% if !signed_in? %>
      	  <li><%= link_to t(:top_menu_sign_up), signup_path %></li>
       <% end %>
	    <% if signed_in? %>
	     <% if current_user.admin?  %>
        <li><%= link_to "Админ панель", "/admin" %></li>
        <% end %>
	      <li><%= link_to t(:top_menu_sign_out), signout_path, :method => :delete %> (<%= image_tag("../images/sign_in_icon.png") + " " +  current_user.name %>)</li>
	   <% else %>

	      <li><%= link_to t(:top_menu_sign_in), "#?w=400", :class => "poplight", :rel =>"popup_name"  %></li>
	   <% end %>
	   <% if signed_in? %>
      	  <li><%= link_to t(:top_menu_profile), current_user %></li>
       <% end %>
    </ul>
  </div>

  <div id="navigation" class="grid_24">
	<ul class="dropdown">
	    <li><%= link_to t(:top_menu_coefficients), coefficients_path %></li>
      <li><%= link_to t(:top_menu_bookmakers), bookmakers_path %></li>
      <li><%= link_to t(:top_menu_statistics), statistics_path %></li>
      <li><%= link_to t(:top_menu_tools), tools_path %>
        <ul class="sub_menu">
            <li>
                Calculators
        				<ul>
        					<li>Dutching</li>
        					<li>Hutching</li>
        					<li>Hedging</li>
        					<li>Bet Calculator</li>
        				</ul>
        		</li>
        </ul>
      </li>
	</ul>
  </div>

  <div id="sub_navigation" class="grid_24">
      <%= yield :sub_navigation%>
  </div>

</header>

<section class="container_24">
	<div id="wrapper" class="grid_24">

	  <div id="breadcrumb"  class="grid_24">
       <%= yield :breadcrumb %>
    </div>

		<div id="left_nav" class="grid_5">
      <%= yield :left_nav%>
		</div>

	  <div id="content" class="grid_14">
		  <% flash.each do |key, value| %>
		      <div class="flash <%= key %>"> <%= value %> </div>
		  <% end %>
		  <%= yield :content%>
		  <%= yield%>
	   </div>

	  <div id="right_nav" class="grid_5">
      <%= yield :right_nav%>
    </div>
</section>

<footer class="container_24">

	  <div id="footer" class="grid_24">
	     <div id= "bottom_links" class="grid_10">
	        <%= link_to "Privacy Policy", "/info/policy" %> |
	        <%= link_to "Terms of use", "/info/terms" %> |
        	<%= link_to "About", "/info/about" %> |
        	<%= link_to "Contact us", "/info/contactus" %>
       </div>

       <div id= "copyrights" class="grid_12">
      	<%= t(:footer_copyrights) %>
       </div>
  	</div>

  	<div id="debug" class="grid_24">
    	<% if signed_in? %>
      	<%= debug(params) if Rails.env.development? %>
      <% end %>
  	</div>

</footer>

<div id="popup_name" class="popup_block">
    <%= render 'sessions/new_session' %>
</div>

</body>
</html>

