<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>

  <%= csrf_meta_tag %>

  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <%= csrf_meta_tag %>


  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>

</head>
<body>
<header class="container_24">

  <div id="logo" class="grid_12">
    <%= link_to "betafisha.ru", root_path %>
  </div>

  <div id="user_entrance" class="grid_12">
    <ul>
      <li><%= link_to t(:top_menu_sing_up), new_user_path %></li>
      <li></li>
      <li><%= link_to  "api_test", "betsloader" %></li>
      <li><%= link_to "ru", "#{request.path}?locale=ru" %></li>
      <li><%= link_to "en", "#{request.path}?locale=en" %></li>
    </ul>

  </div>

  <nav class="grid_24">
    <ul>
      <li><%= link_to t(:top_menu_bettings), betting_path %></li>
      <li><%= link_to t(:top_menu_free_bets), free_bets_path %></li>
      <li><%= link_to t(:top_menu_in_play), in_play_path %></li>
      <li><%= link_to t(:top_menu_tipping), tipping_path %></li>
      <li><%= link_to t(:top_menu_gaming), gaming_path %></li>
      <li><%= link_to t(:top_menu_news), news_path %></li>
    </ul>
  </nav>

</header>

<section class="container_24">
  <div id="content" class="grid_24">
    <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    
    <%= yield %>
  </div>

  <div class="grid_24">
    <%= debug(params) if Rails.env.development? %>
    <%= debug(params) if Rails.env.production? %>
  </div>

  
</section>

</body>
</html>