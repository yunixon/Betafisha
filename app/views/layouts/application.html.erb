  <![endif]-->

  <%= csrf_meta_tag %>


  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>

</head>
<body>
<header class="container_24">

  <div id="logo" class="grid_12">
    <%= link_to "BETSCHECKER.ru", root_path %>
  </div>

  <div id="user_entrance" class="grid_12">
    <ul>
      <li><%= link_to "Регистрация", new_user_path %></li>
    </ul>
  </div>

  <nav class="grid_24">
    <ul>
      <li><%= link_to "Ставки", betting_path %></li>
      <li><%= link_to "Свободные ставки", free_bets_path %></li>
      <li><%= link_to "В игре", in_play_path %></li>
      <li><%= link_to "Советы", tipping_path %></li>
      <li><%= link_to "Игры", gaming_path %></li>
      <li><%= link_to "Новости", news_path %></li>
    </ul>
  </nav>

</header>

<section class="container_24">
  <div id="content" class="grid_24">
    <% flash.each do |key, value| %>
        <div class="flash <%= key %>"><%= value %></div>
    <% end %>
    <%= yield %>
  </div>

  <div class="grid_24">

  </div>

</section>

