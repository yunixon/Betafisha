<!DOCTYPE html>
<html>
<head>
  <title><%= title 'BetAfisha' %></title>
  
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
   
   <%= stylesheet_link_tag 'reset' %>
   <%= stylesheet_link_tag 'grid' %>
   <%= stylesheet_link_tag 'accordian' %>
   <%= stylesheet_link_tag 'style' %>
    <%= stylesheet_link_tag 'admin_style' %>
   <%= stylesheet_link_tag 'tabs' %>
   
  	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jquery' %>
	<%= javascript_include_tag 'tabs' %>
	<%= javascript_include_tag 'textinputfilter' %>
	<%= javascript_include_tag 'script' %>
	
	<%= include_tiny_mce_if_needed %>

</head>
<body>

<header class="container_24">  

  <div id="logo" class="grid_12">
    <%= link_to "BetAfisha", root_path %>
  </div>

  <div id="user_entrance" class="grid_12">
    <ul>
       <% if !signed_in? %>
      	  <li><%= link_to t(:top_menu_sign_up), signup_path %></li>
       <% end %>
	   <% if signed_in? %>
	      <li><%= link_to t(:top_menu_sign_out), signout_path, :method => :delete %></li>
	   <% else %>
	      <li><%= link_to t(:top_menu_sign_in), signin_path  %></li>
	   <% end %>   
	   <% if signed_in? %>
      	  <li><%= link_to t(:top_menu_profile), current_user %></li>
       <% end %>
       
       <li> <%= link_to "en", "#{request.path}?locale=en" %> </li>
       <li> <%= link_to "ru", "#{request.path}?locale=ru" %> </li>
    </ul>

  </div>

  <div id="navigation" class="grid_24">
	<ul>
	<% Page.joins(:page_subject).where('page_subjects.name = ?', 'nav').all.each do |page| %>
		<li> <%= link_to page.name, page %> </li>
	<% end%>
	</ul>
  </div>

</header>

<section class="container_24">
  	<div id="content" class="grid_24">
	    <%= yield %>
  	</div>
</section>

<footer class="container_24">
  	<div id="debug" class="grid_24">
    	<%= debug(params) if Rails.env.development? %>
    	<%= debug(params) if Rails.env.production? %>
  	</div>  	
</footer>

</body>
</html>
