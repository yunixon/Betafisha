<!DOCTYPE html>
<html>
	
<head>
  <title><%= title %></title>
  
  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
   
   <%= stylesheet_link_tag "grid.css" %>
   <%= stylesheet_link_tag "tabs.css" %>
   <%= stylesheet_link_tag "accordian.css" %>
   <%= stylesheet_link_tag "admin_style.css" %>
  
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag 'jquery.js' %>
	<%= javascript_include_tag 'tabs.js' %>
	<%= javascript_include_tag 'textinputfilter.js' %>
	<%= javascript_include_tag 'script.js' %>
</head>

<body>
<header class="container_24">

  <div id="logo" class="grid_24">
    <%= link_to "Bet Afisha logo", root_path %>
  </div >

  <div id="user_entrance" class="grid_24">
    <ul>
       <% if !signed_in? %>
      	  <li><%= link_to t(:top_menu_sign_up), signup_path %></li>
       <% end %>
	   <% if signed_in? %>
	      <li><%= link_to t(:top_menu_sign_out), signout_path, :method => :delete %></li>
	   <% else %>
	      <li><%= link_to t(:top_menu_sign_in), signin_path  %></li>
	   <% end %>   
	   <% if signed_in? %>
      	  <li><%= link_to t(:top_menu_profile), current_user %></li>
       <% end %>

      <li><%= link_to "api_test", api_test_path %></li>
      <li><%= link_to "ru", "#{request.path}?locale=ru" %></li>
      <li><%= link_to "en", "#{request.path}?locale=en" %></li> 
    </ul>

  </div>

</header>

<section class="container_24">
	
  	<div id="content" class="grid_24">

	    <%= yield %>
  	</div>
  		
</section>

<footer class="container_24">
	
	<div id="footer" class="grid_24">
    	<%= t(:footer_copyrights) %>
  	</div>

  	<div id="debug" class="grid_24">
    	<%= debug(params) if Rails.env.development? %>
    	<%= debug(params) if Rails.env.production? %>
  	</div > 
</footer>

</body>
</html>