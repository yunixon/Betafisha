<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  


  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
   
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  

</head>
<body>
<header class="container_24">

  <div id="logo" class="grid_12">
    <%= link_to "BetAfisha.ru", root_path %>
  </div>

  <div id="user_entrance" class="grid_12">
    <ul>
       <% if !signed_in? %>
      	  <li><%= link_to t(:top_menu_sign_up), signup_path %></li>
       <% end %>
	   <% if signed_in? %>
	      <li><%= link_to t(:top_menu_sign_out), signout_path, :method => :delete %></li>
	   <% else %>
	      <li><%= link_to t(:top_menu_sign_in), signin_path  %></li>
	   <% end %>   
	   <% if signed_in? %>
      	  <li><%= link_to t(:top_menu_profile), current_user %></li>
       <% end %>

      <li><%= link_to  "api_test", api_test_path %></li>
      <li><%= link_to "ru", "#{request.path}?locale=ru" %></li>
      <li><%= link_to "en", "#{request.path}?locale=en" %></li>
    </ul>

  </div>


</header>

<section class="container_24">
	
	
  	<div id="content" class="grid_24">
	    <% flash.each do |key, value| %>
	        <div class="flash <%= key %>"><%= value %></div>
	    <% end %> 
	    <%= yield %>
  	</div>
  	
  		
</section>

<footer class="container_24">
	
	<div id="footer" class="grid_24">
    	<%= t(:footer_copyrights) %>
  	</div>

  	<div id="debug" class="grid_24">
    	<%= debug(params) if Rails.env.development? %>
    	<%= debug(params) if Rails.env.production? %>
  	</div> 
</footer>

</body>
</html>