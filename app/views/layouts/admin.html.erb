<!DOCTYPE html>
<html>
<head>
  <title><%= title 'BetAfisha' %></title>

	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

  <%= csrf_meta_tag %>
	<%= stylesheet_link_tag 'application', 'admin_style', 'select-ui', 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/ui-darkness/jquery-ui.css'%>
	
	

	<%= javascript_include_tag 'application' %>

	<%= javascript_include_tag 'textinputfilter' %>
  <%= javascript_include_tag 'jquery-ui' %>
  <%= javascript_include_tag 'select-ui' %>
  
  
	<%#= include_tiny_mce_if_needed %>
	
</head>
  <body>
    <header class="container_20">
      <div id="logo" class="grid_10">
        <%= link_to "BetAfisha", root_path %>
      </div>

      <div id="user_entrance" class="grid_10">
        <ul>
	       <% if signed_in? %>
	          <li><%= link_to t(:top_menu_sign_out), destroy_user_session_path %> <%= image_tag("sign_in_icon.png") + " " +  current_user.email %></li>
	       <% end %>
        </ul>

      </div>
    </header>

    <section class="container_20">
      	<div id="content" class="grid_20">
	        <%= yield %>
      	</div>
    </section>

    <footer class="container_20">
      	<div id="debug" class="grid_20">
        	<%#= debug(params) if Rails.env.development? %>
        	<%#= debug(params) if Rails.env.production? %>
      	</div>
    </footer>
  </body>
</html>

