<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="field"><h1><%= t(:top_menu_sign_up) %></h1></div>
    <%#= devise_error_messages! %>
    <div class="field">
      <%= f.label :username, t(:sing_up_username) %>
      <br/>
      <%= f.text_field :username %>
	    <% if @user.errors.any? %>
	        <div class="">
	            <%= @user.errors[:username] %>
	        </div>
	    <% end %>
    </div>

    <div class="field">
      <%= f.label :email, t(:sing_up_email) %>
      <br/>
      <%= f.text_field :email %>
	    <% if @user.errors.any? %>
	        <div class="">
	            <%= @user.errors[:email] %>
	        </div>
	    <% end %>
    </div>

    <div class="field">
      <%= f.label :password, t(:sing_up_password) %>
      <br/>
      <%= f.password_field :password %>
	    <% if @user.errors.any? %>
	        <div class="">
	            <%= @user.errors[:password] %>
	        </div>
	    <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t(:sing_up_password_confirmation) %>
      <br/>
      <%= f.password_field :password_confirmation %>
	    <% if @user.errors.any? %>
	        <div class="">
	            <%= @user.errors[:password_confirmation] %>
	        </div>
	    <% end %>
    </div>

    <div class="actions">
      <%= f.submit t(:sing_up_submit) %>
    </div>
<% end %>

