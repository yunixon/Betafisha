<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div class="field"><h1><%= t(:top_menu_sign_up) %></h1></div>

    <%= devise_error_messages! %>
    
    <div class="field">
      <%= f.label :username, t(:sing_up_username) %>
      <br/>
      <%= f.text_field :username %>
    </div>
    
    <div class="field">
      <%= f.label :email, t(:sing_up_email) %>
      <br/>
      <%= f.text_field :email %>
    </div>
    
    <div class="field">
      <%= f.label :password, t(:sing_up_password) %>
      <br/>
      <%= f.password_field :password %>
    </div>
    
    <div class="field">
      <%= f.label :password_confirmation, t(:sing_up_password_confirmation) %>
      <br/>
      <%= f.password_field :password_confirmation %>
    </div>
    
    <div class="actions">
      <%= f.submit t(:sing_up_submit) %>
    </div>
<% end %>

