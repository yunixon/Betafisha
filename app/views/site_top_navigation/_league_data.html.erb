<% if !@league.nil? %>
  <div class="betting-odds">

    <div class="betting-odds-header">
      <span style= "float: left;" ><%= @league.name %> Betting Odds</span>
      <% if signed_in? %>
        <% if @has_ligue.nil? %>
          <%= link_to "добавить лигу", "#", :class => "add_to_coupon", :id => "league_#{@league.id }"  %>
        <% elsif %>
          <%= link_to "удалить лигу", "#", :class => "remove_from_coupon", :id => "league_#{@league.id }"  %>
        <% end %>
      <% end %>
    </div>

  <div class="bettings-odds-bookmakers">
    <%= link_to "show all", "#", :class => "allin-filter", :id => "league_#{@league.id }"  %> |
    <%= link_to "1x2", "#", :class => "1x2-filter", :id => "league_#{@league.id }" %> |
    <%= link_to "1or2", "#", :class => "1or2-filter", :id => "league_#{@league.id }" %> |
    <%= link_to "Outright", "#", :class => "Outright-filter", :id => "league_#{@league.id }" %>
  </div>

    <div class="events-data">
      <% @league.events.each do |e| %>
        <div class= " event-title ">
          <%= link_to e.name, "#" %> <%= link_to "expand", "#", :class => "expand" %>
        </div>
        <div class="odds-data">
          <% e.bets.each do |b| %>
            <% @bet_name = b.name %>
            <% @bet_odd = b.odd %>
            <% @bet_bookmaker = b.bookmaker.name %>
            <% if b.bet_type.name == @bet_type_filter %>
              <%= render 'bet' %>
            <% elsif "allin" == @bet_type_filter %>
              <%= render 'bet' %>
            <% end %>
           <% end %>
        </div>
      <% end %>
    </div>

  </div>
<% end %>

<%= javascript_include_tag 'script' %>

